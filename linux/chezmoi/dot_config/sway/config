set $lock_command Blurlock
exec swayidle -w \
    timeout 5 'if pgrep -x swaylock; then swaymsg "output * dpms off"; fi' \
    resume 'if pgrep -x swaylock; then swaymsg "output * dpms on"; fi' \
    lock "$lock_command" \
    before-sleep "$lock_command"

