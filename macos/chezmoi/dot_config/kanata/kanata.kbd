    @cap a    s    d    f    g    h    j    k    l    ;    '    \    ret
    lsft nubs z    x    c    v    b    n    m    ,    .    /    rsft
    @fnl lctl lalt @lmt           spc            @rcl ralt â—€   â–¼ â–² â–¶
